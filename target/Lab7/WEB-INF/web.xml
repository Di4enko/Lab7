<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Lab 7 Web Chat</display-name>

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MessageList</servlet-name>
    <servlet-class>com.servlets.MessageListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MessageList</servlet-name>
    <url-pattern>/messages.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NewMessage</servlet-name>
    <servlet-class>com.servlets.NewMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewMessage</servlet-name>
    <url-pattern>/send_message.do</url-pattern>
  </servlet-mapping>
</web-app>
